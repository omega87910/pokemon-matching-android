<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/starsky"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/tip_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tips">

            </Button>

            <TextView
                android:id="@+id/tip_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="提示:"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/tip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <Button
                android:id="@+id/refresh_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/refresh">

            </Button>

            <TextView
                android:id="@+id/refresh_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="洗牌:"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/refresh_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/Score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Score:"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/score_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                >
            </Space>
            <TableLayout
                android:id="@+id/gameTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                >
            </TableLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                >
            </Space>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                >

            </TextView>
            <TextView
                android:id="@+id/time_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                >

            </TextView>
            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/timeProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:progress="180"
                android:layout_weight="9"
                />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/popLayoutBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#000000"
            android:alpha="0"
            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/resultPopLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:alpha="0"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            >
            <TextView
                android:id="@+id/titlePopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="過關！"
                android:textSize="32dp"
                >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/comboLabelPopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="最大連擊："
                    android:textSize="18dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/comboNumberPopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="18dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/comboScoreLabelPopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="連擊分數："
                    android:textSize="18dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/comboScorePopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="18dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/timeLabelPopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="時間分數："
                    android:textSize="18dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/timePopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="18dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/totalScoreLabelPopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="合計得分："
                    android:textSize="24dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/totalScorePopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="24dp"
                    >
                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:visibility="invisible"
                android:text="繼續"
                >

            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/awardPopLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:alpha="0"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            >
            <TextView
                android:id="@+id/awardTitlePopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="請選擇以下獎勵！"
                android:textSize="32dp"
                >
            </TextView>
                <LinearLayout
                    android:id="@+id/awardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/awardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="獲得"
                    android:gravity="right"
                    android:textSize="24dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    ></TextView>
                <TextView
                    android:id="@+id/awardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="24dp"
                    >
                </TextView>
            </LinearLayout>


                <Button
                    android:id="@+id/continueButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:textSize="20dp"
                    android:text="繼續">

                </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gameOverPopLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:alpha="0"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="140dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            >
            <TextView
                android:id="@+id/gameOverTitlePopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Game Over"
                android:textSize="32dp"
                android:textColor="#FF0000"
                >
            </TextView>
            <Button
                android:id="@+id/restartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:textSize="20dp"
                android:text="重新開始">

            </Button>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
