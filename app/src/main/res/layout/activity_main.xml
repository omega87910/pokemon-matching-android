<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/starsky"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            app:srcCompat="@drawable/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:foregroundTint="#FFFFFF"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <Button
                android:id="@+id/StartGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:text="開始遊戲"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textColor="#1990ED"
                android:textSize="24dp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/gameSettingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="遊戲設定"
                android:textColor="#1990ED"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textSize="24dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/gameExplainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="遊戲說明"
                android:textColor="#1990ED"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textSize="24dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        android:alpha="0"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingPopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:alpha="0"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        >
        <TextView
            android:id="@+id/titlePopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="遊戲設定"
            android:textSize="32dp"
            android:textColor="#000000"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00AAAA"
                android:layout_weight="2"
                android:text="難度一"
                android:checked="true"
                android:textColor="#000000">

            </RadioButton>
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="2"
                android:buttonTint="#00AAAA"
                android:text="難度二"
                >
            </RadioButton>
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="2"
                android:buttonTint="#00AAAA"
                android:text="難度三"
                >
            </RadioButton>
            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:buttonTint="#00AAAA"
                android:layout_weight="2"
                android:text="難度四"
                >
            </RadioButton>
        </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/settingPokemonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="10種寶可夢"
            android:textSize="20dp"
            >
        </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/settingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:text="180秒"
            android:textSize="20dp"
            android:layout_margin="10dp"
            >
        </TextView>
    </LinearLayout>
        <Button
            android:id="@+id/settingCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="關閉"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textColor="#1990ED"
            android:visibility="invisible"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameExplainPopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:alpha="0"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        >
        <TextView
            android:id="@+id/gameExplainTitlePopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="遊戲說明"
            android:textSize="32dp"
            android:textColor="#000000"
            >
        </TextView>
        <ImageView
            android:layout_width="175dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/intro1"
            >
        </ImageView>
        <ImageView
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:background="@drawable/intro2"
            android:layout_gravity="center"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="若兩隻寶可夢有路徑，並轉彎兩次以內，即可消除"
            >

        </TextView>
        <Button
            android:id="@+id/gameExplainCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="關閉"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textColor="#1990ED"
            >
        </Button>
    </LinearLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
